pipeline {
    agent any
    
    environment {
        S3_BUCKET = 'example.com-portfolio-op3zie5r'
        CLOUDFRONT_ID = 'EHJEFP1EMDMWL'
        NODE_VERSION = '16'
    }
    
    stages {
        stage('Verify Environment') {
            steps {
                echo 'Checking environment setup...'
                    sh '''
                        echo "Current user: $(whoami)"
                        echo "Working directory: $(pwd)"
                        echo "Node.js version: $(/usr/local/bin/node --version)"
                        echo "npm version: $(/usr/local/bin/npm --version)"
                        echo "AWS CLI version: $(aws --version)"
                        '''
            }
        }
        
        stage('Install Dependencies') {
    steps {
        echo 'Installing npm dependencies...'
        dir('my-portfolio') {
            sh '/usr/local/bin/npm install'
        }
    }
}

stage('Build Application') {
    steps {
        echo 'Building React application...'
        dir('my-portfolio') {
            sh '/usr/local/bin/npm run build'
        }
    }
}
        
stage('Deploy to S3') {
            steps {
                echo 'Deploying to S3 bucket...'
                dir('my-portfolio') {
                    sh 'aws s3 sync dist/ s3://${S3_BUCKET} --delete --exclude "*.git*"'
                }
            }
        }        
        
stage('Invalidate CloudFront') {
            steps {
                echo 'Invalidating CloudFront cache...'
                sh 'aws cloudfront create-invalidation --distribution-id ${CLOUDFRONT_ID} --paths "/*"'
            }
        }
    }        
    
    post {
        success {
            echo 'üéâ Pipeline succeeded! Your portfolio is deployed.'
            echo "‚úÖ Website: https://d3tl5v11royc65.cloudfront.net"
        }
        failure {
            echo '‚ùå Pipeline failed. Check the logs for details.'
        }
        always {
            echo 'Pipeline execution completed.'
        }
    }
}